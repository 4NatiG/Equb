@{
}
@model IEnumerable<WebApplication10.Models.Transact>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Transaction Record</h2>
       
    </div>
    <br /><br />
    @if (Model.Count() > 0)

    {


        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Account ID
                    </th>
                    <th> Transaction to</th>
                    <th> Transaction type</th>
                    <th> User_id</th>
                    <th> Amount</th>
                    <th> Time</th>
                </tr>
            </thead>
            <tbody>
                @{string num = TempData["num"].ToString();
                    
                    }
                        @foreach (var obj in Model)
                        {
                            string user = obj.id.ToString();
                            @if (user == num)
                            {
                            <tr>
                                <td width="10%">@obj.account_id</td>
                                <td width="20%">@obj.trans_to</td>
                                <td width="20%">@obj.trans_type</td>
                                <td width="30%">@obj.id</td>
                                <td width="30%"> @obj.amount</td>
                                <td width="30%"> @obj.time</td>
                                
                            </tr>}
                        }
                    </tbody>
        </table>
    }
</div>




