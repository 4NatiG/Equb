@{
}

@model IEnumerable<WebApplication10.Models.Account>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Account Balance</h2>
        
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Account Number
                    </th>
                    <th> Balance</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Id</td>
                    <td width="30%">@obj.account_id</td>
                    <td width="30%">@obj.balance</td>

                    <td class="text-center">
                       
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }

</div>




