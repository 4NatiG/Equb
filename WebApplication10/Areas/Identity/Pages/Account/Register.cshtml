@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row" style="background-color:whitesmoke">
    <div class="col-md-4 col-md-offset-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
              
                <input asp-for="Input.Fname" placeholder="First Name" class="form-control" />
                <span asp-validation-for="Input.Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="Input.Lname" placeholder="Last Name" class="form-control" />
                <span asp-validation-for="Input.Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="Input.LLname" placeholder="Grand Parnet Name" class="form-control" />
                <span asp-validation-for="Input.LLname" class="text-danger"></span>
            </div>

            <div class="form-group">
               
                <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
           
            <div class="form-group">
               
                <input asp-for="Input.phone_no" placeholder="Phone Number" class="form-control" />
                <span asp-validation-for="Input.phone_no" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Input.typeofid" placeholder="TypeofID" class="form-control" />
                <span asp-validation-for="Input.typeofid" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input   asp-for="Input.Id_photo" placeholder="Photo" class="form-control" />
                <span asp-validation-for="Input.Id_photo" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Input.ConfirmPassword"placeholder="ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
